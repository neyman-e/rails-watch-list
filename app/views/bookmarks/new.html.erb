<div class="d-flex justify-content-between align-items-center">
  <h2 class="m-3">New bookmark</h2>
  <%= link_to "Back to #{@list.name}", list_path(@list), class:'btn btn-primary my-1' %>
  <%= link_to 'Back to lists', lists_path, class:'btn btn-primary my-1' %>
</div>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="card">
    <div class="card-body">
      <%= f.association :movie, prompt: 'Choose a movie' %>
      <%= f.input :comment, :label => 'Enter the bookmarks\'s comment', :placeholder => 'i.e. Best movie I\'ve ever watched' %>
      <%= f.submit 'Submit bookmark', class: "btn btn-success" %>
    </div>
  </div>
<% end %>
