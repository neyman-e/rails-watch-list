<div class="d-flex justify-content-between align-items-center">
  <h2 class="m-3"><%= @list.name %> list</h2>
  <%= link_to 'Back to lists', lists_path, class:'btn btn-primary my-1' %>
</div>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card my-2">
    <div class="card-body">
      <h5 class='border-bottom'><%= bookmark.movie.title %></h5>
      <p><%= bookmark.movie.overview %></p>
      <h6><%= bookmark.movie.rating %></h6>
      <p><%= bookmark.comment %></li></p>
    </div>
  </div>
<% end %>
<%= link_to "New bookmark", new_list_bookmark_path(@list), class:'btn btn-primary my-1' %>
