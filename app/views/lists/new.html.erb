<div class="d-flex justify-content-between align-items-center">
  <h2 class="m-3">New list</h2>
  <%= link_to 'Back to lists', lists_path, class:'btn btn-primary my-1' %>
</div>
<%= simple_form_for @list do |f| %>
  <div class="card">
    <div class="card-body">
      <%= f.input :name, :label => 'Enter the list\'s name', :placeholder => 'List Name' %>
      <%= f.submit 'Submit', class: "btn btn-success" %>
    </div>
  </div>
<% end %>
