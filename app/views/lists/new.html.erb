<%= render partial: "/shared/navbar" %>
<div class="d-flex justify-content-between align-items-center">
  <%= link_to 'Back to lists', :root, class:'btn btn-primary my-1' %>
</div>
<div class="container">
  <%= simple_form_for @list do |f| %>
    <div class="card">
      <div class="card-body">
        <%= f.input :name, :label => 'Enter the list\'s name', :placeholder => 'List Name' %>
        <%= f.submit 'Submit', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
