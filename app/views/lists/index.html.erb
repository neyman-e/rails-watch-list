<%= render partial: "/shared/navbar" %>
<div class="banner"
     data-controller="navbar"
     data-action="scroll@window->navbar#updateNavbar"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(/assets/cinema_banner.jpeg);">
  <div class="container">
    <h1>Keep track of your <strong>favourite movies</strong>!</h1>
    <p>Add as many lists as you want and bookmark your movies to remember every experience.</p>
  </div>
</div>
<div class="container">
  <div class="list-group">
    <% @lists.each do |list| %>
      <div class="list-group-item my-1 d-flex justify-content-between align-items-center">
        <%= link_to list.name, list_path(list) %>
        <%= link_to "Delete list", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'btn btn-danger my-1' %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create new list', new_list_path, class:'btn btn-primary my-1' %>
</div>
